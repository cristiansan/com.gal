<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbad4e"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/act_function_tittle_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/tittle_function"
        android:textSize="30sp"
        tools:ignore="UnknownIdInLayout" />

    <EditText
        android:id="@+id/act_function_edit_text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/hint_top" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/act_function_edit_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_function_edit_text_top"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/hint_bottom" />

    <Button
        android:id="@+id/act_function_button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_function_edit_text_bottom"
        android:layout_centerHorizontal="true"
        android:text="@string/enter" />

</RelativeLayout>